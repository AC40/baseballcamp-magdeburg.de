---
const currentPath = Astro.url.pathname;
---

<nav class="nav-container">
  <div class="nav-content">
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="Magdeburger Baseball Camp" class="nav-logo-img" />
    </a>
    <button class="nav-toggle" aria-label="Menü öffnen" aria-expanded="false">
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
    </button>
    <ul class="nav-links">
      <li>
        <a href="/" class={`nav-link ${currentPath === "/" ? "nav-link-active" : ""}`}>
          Infos
        </a>
      </li>
      <li>
        <a href="/#faq-section" class="nav-link">FAQ</a>
      </li>
      <li>
        <a href="/#contact" class="nav-link">Kontakt</a>
      </li>
      <li>
        <a
          href="/anmelden"
          class={`nav-link-prominent ${currentPath === "/anmelden" ? "nav-link-prominent-active" : ""}`}
        >
          Anmelden
        </a>
      </li>
    </ul>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector<HTMLButtonElement>(".nav-toggle");
    const links = document.querySelector<HTMLElement>(".nav-links");
    const navLinkEls = Array.from(document.querySelectorAll<HTMLAnchorElement>(".nav-links a"));

    if (!toggle || !links) return;

    toggle.addEventListener("click", () => {
      const isOpen = links.classList.toggle("nav-links-open");
      toggle.setAttribute("aria-expanded", isOpen ? "true" : "false");
      document.body.classList.toggle("nav-locked", isOpen);
    });

    navLinkEls.forEach((link) =>
      link.addEventListener("click", () => {
        links.classList.remove("nav-links-open");
        toggle.setAttribute("aria-expanded", "false");
        document.body.classList.remove("nav-locked");
      })
    );
  });
</script>

<style>
  .nav-container {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-light);
    box-shadow: 
      0 2px 8px var(--shadow-soft),
      0 1px 2px var(--shadow-soft);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    position: relative;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nav-logo-img {
    height: 50px;
    width: auto;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }

  .nav-toggle {
    display: none;
    background: var(--bg-section);
    border: 2px solid var(--border-light);
    border-radius: 8px;
    padding: 0.5rem 0.6rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 4px var(--shadow-soft);
  }

  .nav-toggle:hover {
    border-color: var(--red-accent);
    box-shadow: 0 2px 8px rgba(220, 38, 38, 0.15);
  }

  .nav-toggle:active {
    transform: scale(0.96);
  }

  .nav-toggle-bar {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--text-dark);
    margin: 4px 0;
    border-radius: 1px;
    transition: all 0.3s ease;
  }

  .nav-link {
    color: var(--text-dark);
    text-decoration: none;
    font-weight: 500;
    text-transform: none;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    border: 1px solid transparent;
    transition: all 0.3s ease;
    background: transparent;
  }

  .nav-link:hover {
    color: var(--red-accent);
    background: rgba(220, 38, 38, 0.05);
  }

  .nav-link-active {
    color: var(--red-accent);
    background: rgba(220, 38, 38, 0.1);
    font-weight: 600;
  }

  .nav-link-prominent {
    color: white;
    background: linear-gradient(135deg, var(--red-accent) 0%, var(--red-dark) 100%);
    text-decoration: none;
    font-weight: 600;
    text-transform: none;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
    padding: 0.6rem 1.5rem;
    border-radius: 10px;
    border: none;
    transition: all 0.3s ease;
    display: inline-block;
    box-shadow: 
      0 3px 8px rgba(220, 38, 38, 0.25),
      0 1px 4px rgba(220, 38, 38, 0.15);
  }

  .nav-link-prominent:hover {
    transform: translateY(-2px);
    background: linear-gradient(135deg, var(--red-light) 0%, var(--red-accent) 100%);
    box-shadow: 
      0 5px 12px rgba(220, 38, 38, 0.35),
      0 2px 6px rgba(220, 38, 38, 0.2);
  }

  .nav-link-prominent-active {
    background: linear-gradient(135deg, var(--yellow-accent) 0%, var(--yellow-dark) 100%);
    color: var(--text-dark);
    box-shadow: 
      0 3px 8px rgba(251, 191, 36, 0.3),
      0 1px 4px rgba(251, 191, 36, 0.2);
  }

  :global(body.nav-locked) {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .nav-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 1rem;
      gap: 1rem;
    }

    .nav-logo-img {
      height: 42px;
    }

    .nav-toggle {
      display: flex;
      flex-direction: column;
      gap: 4px;
      padding: 0.6rem;
    }

    .nav-toggle-bar {
      width: 24px;
      height: 2.5px;
      margin: 0;
    }

    .nav-links {
      display: none;
      position: fixed;
      top: 68px;
      left: 0;
      right: 0;
      width: 100%;
      flex-direction: column;
      gap: 0;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(10px);
      border-top: 1px solid var(--border-light);
      border-bottom: 1px solid var(--border-light);
      padding: 0.5rem 0;
      margin: 0;
      box-shadow: 
        0 8px 24px var(--shadow-medium),
        0 2px 8px var(--shadow-soft);
      z-index: 99;
      border-radius: 0 0 12px 12px;
    }

    .nav-links.nav-links-open {
      display: flex;
    }

    .nav-links li {
      width: 100%;
      border-bottom: 1px solid var(--border-light);
    }

    .nav-links li:last-child {
      border-bottom: none;
    }

    .nav-link {
      display: block;
      width: 100%;
      text-align: center;
      font-size: 1rem;
      padding: 1rem;
      border-radius: 0;
      border: none;
      background: transparent;
      color: var(--text-dark);
    }

    .nav-link:hover {
      background: rgba(220, 38, 38, 0.05);
      color: var(--red-accent);
      border: none;
      transform: none;
    }

    .nav-link-active {
      background: rgba(220, 38, 38, 0.1);
      color: var(--red-accent);
      font-weight: 600;
      border: none;
    }

    .nav-link-prominent {
      display: block;
      width: 100%;
      text-align: center;
      font-size: 1.1rem;
      padding: 1.25rem;
      border-radius: 0;
      border: none;
      background: linear-gradient(135deg, var(--red-accent) 0%, var(--red-dark) 100%);
      color: white;
    }

    .nav-link-prominent:hover {
      transform: none;
      background: linear-gradient(135deg, var(--red-light) 0%, var(--red-accent) 100%);
      box-shadow: 
        0 2px 8px rgba(220, 38, 38, 0.25);
    }
  }
</style>

