<div id="kontakt" aria-hidden="true"></div>
<section id="contact" class="section fade-in">
  <div class="max-w-2xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-black text-outline uppercase mb-8 text-center">
      Kontaktformular
    </h2>
    <div class="card">
      <form class="space-y-6">
        <div>
          <label class="block text-lg font-bold mb-2 uppercase">Vor- und Nachname</label>
          <input type="text" class="input-field" placeholder="Maxine Muster" required />
        </div>
        <div>
          <label class="block text-lg font-bold mb-2 uppercase">E-Mail</label>
          <input type="email" class="input-field" placeholder="maxine@example.com" required />
        </div>
        <div>
          <label class="block text-lg font-bold mb-2 uppercase">Telefon (optional)</label>
          <input type="tel" class="input-field" placeholder="+49 391 0000000" />
        </div>
        <div>
          <label class="block text-lg font-bold mb-2 uppercase">Betreff</label>
          <input type="text" class="input-field" placeholder="Frage zum Camp" required />
        </div>
        <div>
          <label class="block text-lg font-bold mb-2 uppercase">Nachricht</label>
          <textarea class="input-field" rows="4" placeholder="Schreibe uns deine Frage" required></textarea>
        </div>
        <div>
          <label class="flex items-center gap-2 text-lg">
            <input type="checkbox" class="w-5 h-5" required />
            <span>Ich stimme der Kontaktaufnahme per E-Mail zu.</span>
          </label>
        </div>
        <button type="submit" class="btn-primary w-full">Nachricht senden</button>
      </form>
    </div>
  </div>
</section>
