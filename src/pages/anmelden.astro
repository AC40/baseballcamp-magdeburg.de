---
import Layout from "../layouts/Layout.astro";
import SignupSection from "../components/sections/SignupSection.astro";
import SiteFooter from "../components/sections/SiteFooter.astro";
---

<Layout>
  <div class="sunburst-bg min-h-screen">
    <div class="halftone halftone-top-left"></div>
    <div class="halftone halftone-bottom-right"></div>

    <section class="section text-center">
      <div class="max-w-3xl mx-auto space-y-4">
        <p class="text-sm uppercase tracking-[0.3em]">Magdeburger Baseball Camp</p>
        <h1 class="text-4xl md:text-6xl font-black text-outline uppercase">
          Anmeldung
        </h1>
        <p class="text-lg opacity-90">
          Sichere dir jetzt deinen Platz für das Baseball Camp.
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-sm opacity-80 mt-6">
          <a href="/teilnahmebedingungen" class="underline hover:opacity-100">
            Teilnahmebedingungen
          </a>
          <span>•</span>
          <a href="/datenschutzerklärung" class="underline hover:opacity-100">
            Datenschutzerklärung
          </a>
        </div>
      </div>
    </section>

    <SignupSection />
    <SiteFooter />
  </div>
</Layout>
